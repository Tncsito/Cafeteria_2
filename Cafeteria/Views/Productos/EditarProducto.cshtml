@model Cafeteria.Models.ProductosModel;
@{
    ViewData["Title"] = "EditarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card col-8">
    <div class="card-header">
        Editar Producto
    </div>
    <div class="card-body justify-content-center">
        <form asp-action="EditarProducto" asp-controller="Productos" method="post">
            <input asp-for="Id" type="hidden" class="form-control" />

            <div class="col-6">
                <label for="staticEmail2" class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label for="staticEmail2" class="form-label">Descripcion</label>
                <input asp-for="Descripcion" type="number" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label for="staticEmail2" class="form-label">Precio</label>
                <input asp-for="Precio" type="number" class="form-control" />
            </div>

            <div class="col-4">
                <button type="submit" class="btn btn-primary">Editar Producto</button>
                <a asp-action="ListarProducto" asp-controller="Productos" class="btn btn-warning">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

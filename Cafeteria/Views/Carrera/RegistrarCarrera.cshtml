@model Cafeteria.Models.CarreraModel;
@{
    ViewData["Title"] = "RegistrarCarrera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card col-8">
    <div class="card-header">
        Crear Nuevo Carrera
    </div>
    <div class="card-body justify-content-center">
        <form asp-action="RegistrarCarrera" asp-controller="Carrera" method="post">
            <div class="col-6">
                <label for="staticEmail2" class="form-label">Codigo</label>
                <input asp-for="Codigo" type="text" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label for="staticEmail2" class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary">Crear Carrera</button>
                <a asp-action="ListarCarrera" asp-controller="Carrera" class="btn btn-warning">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>


